<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bgwhite">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@color/load">

                    </View>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/bgwhite"
                    android:paddingVertical="10dp">

                    <View
                        android:id="@+id/tv_terbaru_load"
                        android:layout_width="100dp"
                        android:layout_height="19dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@color/load" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="20dp"
                        android:background="@color/load" />


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_terbaru_load"
                        android:layout_marginTop="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp">

                                <View
                                    android:id="@+id/img_cover_load"
                                    android:layout_width="100dp"
                                    android:layout_height="130dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@color/load"
                                    android:scaleType="fitXY" />

                                <View
                                    android:id="@+id/tv_judul_load"
                                    android:layout_width="50dp"
                                    android:layout_height="16dp"
                                    android:layout_below="@+id/img_cover_load"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginVertical="5dp"
                                    android:background="@color/load"
                                    android:gravity="center_horizontal"
                                    android:text="judul" />

                                <View
                                    android:id="@+id/tv_deskripsi"
                                    android:layout_width="100dp"
                                    android:layout_height="16dp"
                                    android:layout_below="@+id/tv_judul_load"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/load"
                                    android:text="deskripsi" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="50dp"
                    android:background="@color/bgwhite"
                    android:paddingVertical="10dp">

                    <View
                        android:layout_width="100dp"
                        android:layout_height="19dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@color/load"
                        android:text="About Bookku"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>